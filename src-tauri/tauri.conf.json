{
  "productName": "Mapy",
  "version": "0.1.0",
  "identifier": "com.mapy.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Mapy",
        "width": 1200,
        "height": 800,
        "devtools": true,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png"],
    "macOS": {
      "files": {
        "Resources/Assets.car": "icons/Assets.car"
      }
    }
  }
}
